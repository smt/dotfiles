#!/usr/bin/env ruby
require 'net/telnet.rb'

host = ENV['DAWN_STB_IP'] # Add your IP here

stb = Net::Telnet::new("Host" => host)
stb.login({'Name'=>'root', 'LoginPrompt'=> /(Dawn_GW )?login: \z/, 'Password' => ''})
stb.cmd('killall TntBrowserV2')
stb.cmd('cd /mnt/nfs/mwb')
stb.cmd('./stopBrowser') { |c| c }
# Launch browser and completely detach from the terminal http://superuser.com/a/178592/192
stb.cmd('./runBrowser < /dev/null &>/dev/null &')
stb.cmd('exit')
stb.close
